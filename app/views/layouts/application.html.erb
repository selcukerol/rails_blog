<!DOCTYPE html>
<html>
<head>
	<title>RailsBlog</title>
	<%= csrf_meta_tags %>

	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
	<nav class="navbar navbar-inverse">
		<ul class="nav navbar-nav">
			<% if current_user %>
			<li class="active"><a href="/users/<%=current_user.id if current_user %>/edit">Profile</a></li>
			<li><a href="/posts">Posts</a></li>
			<li><a href="/posts/new">Create Post</a></li>
			<li><%= link_to "LOGOUT", logout_path, class: "logout", method: :post if current_user%></li>
			<% end %>
		</ul>
	</nav>	
	<div>
		<% if flash[:notice] -%>
		<div class = "alert alert-success"><%= flash[:notice] %></div>
		<% end %>
		<%  if session[:user_id] %>
		<p style= "color:white; font-weight: bold;">You are logged in as: <%= current_user.username %></p>
		<% end %>
	</div>
	<div class="container">
		<%= yield %>
	</div>
</body>
</html>
